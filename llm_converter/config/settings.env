# LLM API configuration file
# Set via environment variables or edit this file directly

# LLM API settings
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=your_api_key_here
LLM_MODEL=gpt-4

# Conversion settings
BATCH_SIZE=10
MAX_TOKENS=4000
TEMPERATURE=0.1
TIMEOUT=30

# Input/Output paths
INPUT_DIR=input_data
OUTPUT_DIR=output_data

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/conversion.log
